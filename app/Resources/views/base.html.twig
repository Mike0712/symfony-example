<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset=utf-8"/>
    <title>{% block title %}Ваш магазин{% endblock %} - Symblog</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
        <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
    <div class="container">
        <section id="wrapper" class="col-sm-12">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('ShopBundle_homepage') }}">Главная</a></li>
                                <li><a href="{{ path('ShopBundle_table') }}">Таблица</a></li>
                                <li><a href="{{ path('ShopBundle_about') }}">О нас</a></li>
                                <li><a href="{{ path('ShopBundle_contact') }}">Контакты</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>

                <hgroup>
                    <h2>{% block blog_title %}<a href="{{ path('ShopBundle_homepage') }}">Супер магазин</a>{% endblock %}
                    </h2>

                    <h3>{% block blog_tagline %}<a href="{{ path('ShopBundle_homepage') }}">Заходите, заказывайте</a>
                        {% endblock %}</h3>
                </hgroup>
            </header>

            <section class="main-col">
                {% block body %}{% endblock %}
            </section>
            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>

            <div id="footer">
                {% block footer %}
                    <a href="{{ path('ShopBundle_homepage') }}">@Ваш супер магазин</a>, все права защищены

                {% endblock %}
            </div>
        </section>

        {% block javascripts %}{% endblock %}
    </div>
</body>
</html>